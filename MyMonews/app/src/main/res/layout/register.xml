<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="5dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regsiter_back"
            android:layout_alignTop="@+id/regsiter_back"
            android:gravity="center"
            android:text="注 册" />

        <LinearLayout
            android:id="@+id/regsiter_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@mipmap/back" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="返回" />


        </LinearLayout>

        <TextView
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="登录" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e8e8e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="60dp">


            <EditText
                android:id="@+id/register_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:hint="请输入手机号码" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <EditText
                android:id="@+id/register_no"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/register_btn"
                android:layout_toStartOf="@+id/register_btn"
                android:hint="验证码" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                android:layout_marginRight="15dp"
                android:background="#d7cfcf"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#111"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="60dp">


            <EditText
                android:id="@+id/register_key"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:hint="请输入密码" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/register_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="同意《 "></CheckBox>

        <TextView
            android:id="@+id/register_webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="号外用户协议 "
            android:textColor="#1e79f1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textColor="#111" />
    </LinearLayout>

    <Button
        android:id="@+id/register_login_yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#ef7b7b"
        android:text="注\t\t册"
        android:textColor="#ffffff" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_sdk"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#e8e8e8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="第三方账号登录" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#e8e8e8" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/login_sdk"
            android:weightSum="5">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                />
            <ImageView
                android:id="@+id/lgin_qq"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"

                android:src="@mipmap/qqxhdpi"/>


            <ImageView
                android:id="@+id/login_wb"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="10dp"

                android:layout_marginBottom="15dp"

                android:src="@mipmap/wbxhdpi"/>

            <ImageView
                android:id="@+id/login_wx"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/wxxhdpi"/>


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>