<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.monews.MainActivity">

    <RadioGroup
        android:id="@+id/main_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/main_but1"
            style="@style/main_but"
            android:checked="true"
            android:drawableTop="@drawable/main_home"
            android:text="首页"
            android:textColor="@color/main_text_yes" />

        <RadioButton
            android:id="@+id/main_but2"
            style="@style/main_but"
            android:drawableTop="@drawable/main_video"
            android:text="视频"
            android:textColor="@color/main_text_no" />

        <RadioButton
            android:id="@+id/main_but3"
            style="@style/main_but"
            android:drawableTop="@drawable/main_hot"
            android:text="热点"
            android:textColor="@color/main_text_no" />

        <RadioButton
            android:id="@+id/main_but4"
            style="@style/main_but"
            android:drawableTop="@drawable/main_paihb"
            android:text="排行榜"
            android:textColor="@color/main_text_no" />
    </RadioGroup>

    <TextView
        android:id="@+id/main_tv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/main_group"
        android:background="#5c9e9696" />

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_group" />
</RelativeLayout>
